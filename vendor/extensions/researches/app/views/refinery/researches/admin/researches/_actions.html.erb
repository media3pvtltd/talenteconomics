<ul>
  <% if ::Refinery::Researches::Admin::ResearchesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.researches_admin_researches_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_researches_admin_research_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Researches::Admin::ResearchesController.sortable? && ::Refinery::Researches::Research.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Researches"),
                 refinery.researches_admin_researches_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Researches"),
                 refinery.researches_admin_researches_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
