<%= form_for [refinery, :researches_admin, @research] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @research,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :file -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :file_id,
               :resource => @research.file -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <div class='field'>
    <%= f.label :category -%>
    <%= f.number_field :category -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.researches.admin.researches.research'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @research.title) -%>
<% end -%>
