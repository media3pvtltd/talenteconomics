<ul>
  <% if ::Refinery::BteTestimonials::Admin::BteTestimonialsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.bte_testimonials_admin_bte_testimonials_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_bte_testimonials_admin_bte_testimonial_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::BteTestimonials::Admin::BteTestimonialsController.sortable? && ::Refinery::BteTestimonials::BteTestimonial.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Bte Testimonials"),
                 refinery.bte_testimonials_admin_bte_testimonials_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Bte Testimonials"),
                 refinery.bte_testimonials_admin_bte_testimonials_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
