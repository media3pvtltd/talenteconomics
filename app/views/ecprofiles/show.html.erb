<section id="main_content">

<div class="container">
  <div class="row">
     <aside class="col-md-4">
     	<div class=" box_style_1 profile">
		  <p class="text-center">
        <%if @profile.picture_id.nil? %>
          <%= image_tag("become_logo.jpg", size: '150x150', :class => 'img-circle styled', :alt => 'Talent Economist') %>
         <%else %>
          <%= image_tag(getpath(@profile.picture_id), size: '150x150', :class => 'img-circle styled', :alt => 'Talent Economist') %>
         <%end %>
      </p>
        		    <ul class="social_teacher">
                    <%unless @profile.facebook_profile.empty? %>
                        <li><a href="<%=@profile.facebook_profile%>"><i class="icon-facebook"></i></a></li>
                    <%end %>
                    <%unless @profile.google_profile.empty? %>
                        <li><a href="<%=@profile.google_profile%>"><i class="icon-google"></i></a></li>
                    <%end %>
                    <%unless @profile.twitter_profile.empty? %>
                        <li><a href="<%=@profile.twitter_profile%>"><i class="icon-twitter"></i></a></li>
                    <%end %>
                    <%unless @profile.linkedin_profile.empty? %>
                        <li><a href="<%=@profile.linkedin_profile%>"><i class="icon-linkedin"></i></a></li>
                    <%end %>
                </ul>   
                 <ul>
                     <li>Name <strong class="pull-right"><%=@profile.name %></strong> </li>
                     <li>Location <strong class="pull-right"><%=@profile.location %></strong></li>
                     <li>Certification Date  <strong class="pull-right"><%=@profile.certification_date.strftime("%Y - %m - %d") %></strong></li>
                     <li>Contactable at <strong class="pull-right"><a href="mailto:<%=@profile.email%>" target='_top'><%= @profile.email %></a></strong></li>
                </ul>
              
			</div><!-- End box-sidebar -->
     </aside><!-- End aside -->
     <div class="col-md-8">
     
     			<!--  Tabs -->   
                    <ul class="nav nav-tabs" id="mytabs">
                        <li class="active"><a href="#profile_teacher" data-toggle="tab">Profile</a></li>
                    </ul>
                    
                     <div class="tab-content">
                    
                        <div class="tab-pane fade in active" id="profile_teacher">
                        <h3>About me</h3>
                        <%=raw @profile.content %>
						           </div><!-- End tab-pane --> 
                  </div>   <!-- End content-->              
		 </div><!-- End col-md-8-->   	
  </div><!-- End row-->   
</div><!-- End container -->
</section>


<!-- testimonials -->
