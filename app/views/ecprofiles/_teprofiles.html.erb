<section id="main_content">

<div class="container">
   <div class="row">
    	<%@profiles.each do |p| %>
                    <div class="col-md-4 col-sm-6">
                        <div class=" box_style_3">
                            <p>
                              <%if p.picture_id.nil? %>
                                <%= image_tag("become_logo.jpg", size: '150x150', :class => 'img-circle styled', :alt => 'Talent Economist') %>
                               <%else %>
                                <%= image_tag(getpath(p.picture_id), size: '150x150', :class => 'img-circle styled', :alt => 'Talent Economist') %>
                               <%end %>
                            </p>
                            <h4 class="p-title"><%=p.name %><small> <%= p.location %></small></h4>
                            <%= raw p.content.truncate(200) %>
                            <ul class="social_team">
                            <%unless p.facebook_profile.empty? %>
                                <li><a href="<%=p.facebook_profile%>"><i class="icon-facebook"></i></a></li>
                            <%end %>
                            <%unless p.google_profile.empty? %>
                                <li><a href="<%=p.google_profile%>"><i class="icon-google"></i></a></li>
                            <%end %>
                            <%unless p.twitter_profile.empty? %>
                                <li><a href="<%=p.twitter_profile%>"><i class="icon-twitter"></i></a></li>
                            <%end %>
                            <%unless p.linkedin_profile.empty? %>
                                <li><a href="<%=p.linkedin_profile%>"><i class="icon-linkedin"></i></a></li>
                            <%end %>
                        </ul>    
                        <hr>
                         <%= link_to "Profile", profile_path(p.to_param), :class => 'button_medium_outline' %>
                        </div>
                    </div>
        <%end %>
    </div><!-- End row -->    
        
</div><!-- End container -->
</section><!-- End main_content-->