<section id="sub-header">
<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1 text-center">
			<h1>Learn Blog</h1>
			<p class="lead boxed ">Ex utamur fierent tacimates duis choro an</p>
			<p class="lead">
				Lorem ipsum dolor sit amet, ius minim gubergren ad. At mei sumo sonet audiam, ad mutat elitr platonem vix. Ne nisl idque fierent vix. 
			</p>
		</div>
	</div><!-- End row -->
</div><!-- End container -->
<div class="divider_top"></div>
</section><!-- End sub-header -->

<section id="main_content">

<div class="container">

	 <div class="row">
     <aside class="col-md-4">
     	<div class=" box_style_1">
				<div class="widget">
					<h4>Recent Articles</h4>
                    
					<ul class="recent_post">
						<%@recent.each do |r| %>
						<li>
						<i class="icon-calendar-empty"></i> <%=r.created_at.strftime("%d %m %y") %>
						<div><a href="<%=article_path(r.id) %>"><%= r.title %></a></div>
						</li>
						<%end %>
					</ul>
				</div><!-- End widget -->
                
				
                
	    </div><!-- End box-sidebar -->
     </aside><!-- End aside -->
     
     <div class="col-md-8">
     		<%@articles.each do |article| %>	
     			<div class="post">
     				<a href="blog_post.html" title="single_post.html"><img src="<%= getpath article.photo_id unless article.photo_id.nil?%>" alt="" class="img-responsive img-thumbnail"></a>
					<div class="post_info clearfix">
						<div class="post-left">
							<ul>
								<li><i class="icon-calendar-empty"></i>On <span><%= article.created_at %></span></li>
							</ul>
						</div>
					</div>
					<h2><a href="single_post.html" title="single_post.html"><%=article.title %></a></h2>
					<p>
						<%=raw article.content.truncate(350) %>
					</p>
					<a href="<%=article_path(article.id) %>" class="button_medium" title="#">Read more</a>
				</div><!-- end post -->
             <%end %>
              
                <hr>
                
                <div class="text-center">
                    <%=paginate @articles %>
                </div>
     </div><!-- End col-md-8-->   
  
	
  </div>  <!-- End row-->    
</div><!-- End container -->
</section><!-- End main_content-->


