<section id="login_bg">
<div  class="container">
<div class="row">
	<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
		<div id="login">
			<p class="text-center">
				<h4>Login</h4>
			</p>
			<hr>
			<%=form_tag do %>
     			<div class="form-group">
					<%=text_field_tag 'email','', :class=> 'form-control', :placeholder => 'Email Address' %>
					<span class="input-icon"><i class=" icon-user"></i></span>
				</div>
				<div class="form-group" style="margin-bottom:5px;">
					<%=password_field_tag 'password', '',:class => 'form-control', :placeholder => 'Password' %>
					<span class="input-icon"><i class="icon-lock"></i></span>
				</div>
				<p class="small">
					<a href="<%= forgetpwd_path %>">Forgot Password?</a>
				</p>
				<%=submit_tag 'Login', :class=> 'button_fullwidth' %>
			<%end %>
		</div>
	</div>
</div>
</div>
</section> <!-- End login -->


